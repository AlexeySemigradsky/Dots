# focus
ctrl - up    : yabai -m window --focus north
ctrl - right : yabai -m window --focus east
ctrl - down  : yabai -m window --focus south
ctrl - left  : yabai -m window --focus west

# move managed window
ctrl + shift - up    : yabai -m window --warp north
ctrl + shift - right : yabai -m window --warp east
ctrl + shift - down  : yabai -m window --warp south
ctrl + shift - left  : yabai -m window --warp west

# move window to space and focus space
ctrl + shift - 1 : yabai -m window --space 1 && yabai -m space --focus 1
ctrl + shift - 2 : yabai -m window --space 2 && yabai -m space --focus 2
ctrl + shift - 3 : yabai -m window --space 3 && yabai -m space --focus 3
ctrl + shift - 4 : yabai -m window --space 4 && yabai -m space --focus 4

# rotate windows
ctrl + alt - left  : yabai -m space --rotate 90
ctrl + alt - right : yabai -m space --rotate 270

# applications
ctrl - return : osascript -e 'tell application "iTerm2" to create window with default profile' || open -a 'iTerm.app'
